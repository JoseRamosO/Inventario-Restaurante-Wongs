@model IEnumerable<Inventario.Models.HistorialProducto>

@{
    ViewBag.Title = "Index";
}
 <br />
 <br />
<h2>Historial de Productos</h2>

<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<style>
    ion-icon[name="add-circle-outline"] {
        font-size: 300%;
    }

    ion-icon[name="create-outline" ] {
        font-size: 150%;
    }

    ion-icon[name="trash-outline"] {
        font-size: 150%;
    }

    ion-icon[name="eye-outline"] {
        font-size: 150%;
    }
</style>
<a href="@Url.Action("Create", "HistorialProductoes")" class=" btn btn-success">
    <ion-icon name="add-circle-outline"></ion-icon>
</a>

<br />
<br />
<table class="table">
    <tr>
        <th >
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnidadDeMedida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id=item.HistorialProductoID>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnidadDeMedida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                <a href="@Url.Action("Edit", "HistorialProductoes", new { id = item.HistorialProductoID })" class=" btn btn-warning" id="Edit-@item.HistorialProductoID">
                    <ion-icon name="create-outline"></ion-icon>
                </a> |
                <a href="@Url.Action("Details", "HistorialProductoes", new { id=item.HistorialProductoID })" class="btn btn-primary" id="Details-@item.HistorialProductoID">
                    <ion-icon name="eye-outline"></ion-icon>
                </a>
                |
                <a href="@Url.Action("Delete", "HistorialProductoes", new { id = item.HistorialProductoID })" class="btn btn-danger" id="Delete-@item.HistorialProductoID">
                    <ion-icon name="trash-outline"></ion-icon>
                </a>
            </td>
        </tr>
    }

</table>
